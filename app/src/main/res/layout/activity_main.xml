<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:src="@drawable/ic_flash_on_white_24dp"
            android:onClick="stillPicture"
            android:padding="5sp"
            android:layout_weight="1"
            android:layout_gravity="center"

            android:id="@+id/picturegallery" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:src="@drawable/hellocam"
            android:onClick="stillPicture"
            android:padding="5sp"
            android:layout_weight="1"
            android:id="@+id/takePics" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:src="@drawable/ic_camera_front_white_24dp"
            android:onClick="stillPicture"
            android:padding="5sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/takeVid" />
    </LinearLayout>

</RelativeLayout>